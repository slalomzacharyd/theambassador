{
    "classes::vm": [
        "firewall",
        "networking",
        "login",
        "vimenhanced",
        "redis",
        "db",
        "kegbot",
        "developmenttools"
    ],
    "classes::docker": [
        "login",
        "vimenhanced",
        "redis",
        "db",
        "kegbot",
        "developmenttools"
    ],
    "mysql::server::service_name": "mariadb",
    "mysql::server::package_name": "mariadb-server",
    "mysql::bindings::daemon_dev_package_name": "mariadb-devel",
    "mysql::bindings::daemon_dev_package_ensure": "latest",
    "networking::hostname": "theambassador",
    "db::config::root": { "password": "defaultrootpw"},
    "db::config::users": {
        "kegbot@localhost": {
            "password": "defaultkegbotpw",
            "max_connections_per_hour": 0,
            "max_queries_per_hour": 0,
            "max_updates_per_hour": 0,
            "max_user_connections": 0
        }
    },
    "login::users": {
        "vagrant": {
            "group": "vagrant",
            "home": "/home/vagrant",
            "shell": "/bin/bash"
        }
    },

    "applications": {
        "kegbot": {
            "env_name": "kegbot",
            "path": "/home/vagrant",
            "user": "vagrant",
            "group": "vagrant",
            "access_rules": {
                "http": {
                    "port": 8080,
                    "protocol": "tcp",
                    "ipaddress": "0.0.0.0"
                }
            },
            "data_root": "/data/kegbot/www/kegbot-data",
            "settings_dir": "/home/vagrant/.kegbot",
            "db": {
                "name": "kegbot",
                "charset": "utf8",
                "users": {
                    "kegbot@localhost": [
                        {"grants": ["ALL"], "target": "kegbot.*"}
                    ]
                }
                
            }
        }
    }
}
